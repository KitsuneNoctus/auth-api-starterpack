<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
      <form action="/contacts-update/{{contact._id}}" method="post">
        <legend>New Contact</legend>
        <div class="form-group">
            <label for="post-title">Name</label>
            <input type="text" name="name" class="form-control" id="name" value="{{contact.name}}" required>
        </div>
        <div class="form-group">
            <label for="post-title">Email</label>
            <input type="email" name="email" class="form-control" id="email" value="{{contact.email}}">
        </div>
        <div class="form-group">
            <label for="post-title">Phone</label>
            <input type="phone" name="phone" class="form-control" id="phone" value="{{contact.phone}}">
        </div>
        <div class="form-group">
            <label for="post-title">Social #1</label>
            <input type="url" name="socialone" class="form-control" id="socialone" value="{{contact.socialone}}">
        </div>
        <div class="form-group">
            <label for="post-title">Social #2</label>
            <input type="url" name="socialtwo" class="form-control" id="socialtwo" value="{{contact.socialtwo}}">
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="private" value="{{contact.private}}">
            <label class="form-check-label" for="private">Private</label>
        </div>
        <div class='text-right'>
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
  </div>
</div>