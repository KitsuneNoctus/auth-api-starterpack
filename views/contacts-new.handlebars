<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
      <form action="/contacts/new" method="post">
        <legend>New Contact</legend>
        <div class="form-group">
            <label for="post-title">Name</label>
            <input type="text" name="name" class="form-control" id="name" placeholder="Name" required>
        </div>
        <div class="form-group">
            <label for="post-title">Email</label>
            <input type="email" name="email" class="form-control" id="email" placeholder="email@email.com">
        </div>
        <div class="form-group">
            <label for="post-title">Phone</label>
            <input type="phone" name="phone" class="form-control" id="phone" placeholder="(xxx)xxx-xxxx" >
        </div>
        <div class="form-group">
            <label for="post-title">Social #1</label>
            <input type="url" name="socialone" class="form-control" id="socialone" placeholder="url">
        </div>
        <div class="form-group">
            <label for="post-title">Social #2</label>
            <input type="url" name="socialtwo" class="form-control" id="socialtwo" placeholder="url">
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="private">
            <label class="form-check-label" for="private">Private</label>
        </div>
        <div class='text-right'>
            <button type="submit" class="btn btn-primary">Create Post</button>
        </div>
      </form>
  </div>
</div>